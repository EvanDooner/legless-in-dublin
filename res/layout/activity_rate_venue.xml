<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNewVenue" >

    <!-- Rating activity to score a venue on specified criteria -->
    <!-- Author: Ian Lamon -->


    <!-- Rating subject 1: Entrance -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entrance" />
    </LinearLayout>

    <fragment
        android:id="@+id/entranceRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout="@layout/rate_fragment" />

    <!-- Rating subject 2: Doors -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/doors" />
    </LinearLayout>

    <fragment
        android:id="@+id/doorsRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout="@layout/rate_fragment" />

    <!-- Rating subject 3: Flooring -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFlooring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/flooring" />
    </LinearLayout>

    <fragment
        android:id="@+id/flooringRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout="@layout/rate_fragment" />

    <!-- Rating subject 4: Steps -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/steps" />
    </LinearLayout>

    <fragment
        android:id="@+id/stepsRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout="@layout/rate_fragment" />

    <!-- Rating subject 5: Lifts -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvLifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/lifts" />
    </LinearLayout>

    <fragment
        android:id="@+id/liftsRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout="@layout/rate_fragment" />

    <!-- Rating subject 6: Bathrooms -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvBathrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/bathrooms" />
    </LinearLayout>

    <fragment
        android:id="@+id/bathroomsRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- Rating subject 7: Internal Layout -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/layout" />
    </LinearLayout>

    <fragment
        android:id="@+id/layoutRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- Rating subject 8: Staff -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/staff" />
    </LinearLayout>

    <fragment
        android:id="@+id/staffRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- Rating subject 9: Parking -->
    <!-- Section consists of text (name of crieria being rated) -->
    <!-- followed by rate_fragment to display buttons 0-5 for rating score -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="@string/parking" />
    </LinearLayout>

    <fragment
        android:id="@+id/parkingRating"
        android:name="R.layout.rate_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/bSubmit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/deepblue"
        android:minHeight="0dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Logo at bottom of screen -->
    <ImageView
        android:id="@+id/ivLogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/logoDescription"
        android:padding="20dp"
        android:src="@drawable/leglessindublinbluelogo" />

</LinearLayout>