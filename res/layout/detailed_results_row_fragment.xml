<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <!-- Fragment for Detaied Venue Results. Contains a score for each area rated-->
    <!-- Author: Ian Lamon -->


    <!-- Text view to display category name -->
    <TextView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:text="Category Here"
        android:textSize="18sp" />

    <!-- Rating Bar to display venue rating out of 5 stars -->
    <RatingBar
        android:id="@+id/areaRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.5" />
    
</LinearLayout>
