<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- This activity displays the breakdown of scores received by a venue -->
    <!-- Author: Ian Lamon -->

    <!-- text for results heading -->
    <TextView
        android:id="@+id/detailedResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailedResultsText"
        android:textColor="@color/deepblue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- list of results, row layout from row.xml as fragment -->
    <ListView
        android:id="@+id/detailedResultsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#2980b9"
        android:dividerHeight="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" >

        <!--
        <fragment
        android:id="@+id/detailedResultsRow"
        android:name="R.layout.detailed_results_row_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />
        -->
    </ListView>

    <!-- button to go back to previous Activity -->
    <Button
        android:id="@+id/bback1"
        style="@style/buttonStyle"
        android:background="@color/deepblue"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>