<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Spacing" >

    <!-- Activity to add a new venue to the database -->
    <!-- Author: Ian Lamon -->


    <!-- Add Venue Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/venueName"
            android:text="@string/venueName" />

        <EditText
            android:id="@+id/etVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/venueName"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <!-- Add Venue Type -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvVenueType"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:contentDescription="@string/venueType"
            android:text="@string/venueType" />

        <Spinner
            android:id="@+id/spinnerVenueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/venueType"
            android:ems="10"
            android:prompt="@string/venuePrompt"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Add Venue Address Line 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress1"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="@string/address1"
            android:text="@string/address1" />

        <EditText
            android:id="@+id/etAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/address1"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <!-- Add Venue Address Line 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="@string/address2"
            android:text="@string/address2" />

        <EditText
            android:id="@+id/etAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/address2"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <!-- Pick Venue Address Line 3 from Spinner -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress3"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="@string/address3"
            android:text="@string/address3" />

        <Spinner
            android:id="@+id/spinnerPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/address3"
            android:ems="10"
            android:prompt="@string/postalCodePrompt"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/bSubmit2"
        style="@style/buttonStyle"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:contentDescription="@string/submit"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Logo at bottom of activity -->
    <ImageView
        android:id="@+id/ivLogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/logoDescription"
        android:padding="20dp"
        android:src="@drawable/leglessindublinbluelogo" />

</LinearLayout>