<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNewVenue" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/venueName" />

        <EditText
            android:id="@+id/etVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvVenueType"
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:paddingTop="30dp"
            android:text="@string/venueType" />

        <Spinner
            android:id="@+id/spinnerVenueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:prompt="@string/venuePrompt"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress1"
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="18dp"
            android:text="@string/address1" />

        <EditText
            android:id="@+id/etAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress2"
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="18dp"
            android:text="@string/address2" />

        <EditText
            android:id="@+id/etAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapWords" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvAddress3"
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="18dp"
            android:text="@string/address3" />

        <Spinner
            android:id="@+id/spinnerPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:prompt="@string/postalCodePrompt"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bSubmit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/deepblue"
        android:minHeight="0dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivLogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/logoDescription"
        android:padding="20dp"
        android:src="@drawable/leglessindublinbluelogo" />

</LinearLayout>