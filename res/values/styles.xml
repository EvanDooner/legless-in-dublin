<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Legless in Dublin App Theme. Inherits AppBaseTheme above, which in turn inherits
    	 android:Theme.Light as its platform theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:paddingBottom">2dp</item>
	    <item name="android:paddingLeft">4dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:paddingTop">2dp</item>
	    <item name="android:background">@color/transparent</item>
	    <item name="android:orientation">vertical</item>
	    <item name="android:textColor">#000000</item>
        <item name="android:typeface">normal</item>
        
    </style>
    
    <!-- Style for reverse (blue) background activities -->
    <style name="AppTheme.ReverseStyle">
	    <item name="android:background">@color/deepblue</item>
	    <item name="android:textColor">#ffffff</item>
    </style>
    
    <!-- Style for list spacings -->
    <style name="AppTheme.Spacing">
	    <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
	    <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
	    <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
	    <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Style for buttons throughout app -->
    <style name="buttonStyle">
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">25sp</item>
        <item name="android:background">@color/deepblue</item>
        <item name="android:minHeight">0dp</item>
    </style>
</resources>
